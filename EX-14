#include <stdio.h>
#include <string.h>

struct {
    char fname[20];
} dir;

int main() {
    int n, ch;
    char f[20];
    dir.fname[0] = '\0';

    while(1) {
        printf("\n1.Create File\n2.Delete File\n3.Search File\n4.Exit\nEnter choice: ");
        scanf("%d",&ch);
        switch(ch) {
            case 1: 
                if(dir.fname[0] == '\0') {
                    printf("Enter file name: ");
                    scanf("%s",dir.fname);
                } else printf("File already exists.\n");
                break;
            case 2:
                if(dir.fname[0] != '\0') {
                    printf("File deleted: %s\n",dir.fname);
                    dir.fname[0] = '\0';
                } else printf("No file exists.\n");
                break;
            case 3:
                if(dir.fname[0] != '\0') printf("File found: %s\n",dir.fname);
                else printf("No file exists.\n");
                break;
            case 4: return 0;
        }
    }
}
