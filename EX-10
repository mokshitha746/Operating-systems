#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>
#include <string.h>
#include <unistd.h>
#include <sys/wait.h>

struct msgbuf {
    long mtype;
    char mtext[100];
};

int main() {
    key_t key = ftok("progfile", 65);
    int msgid = msgget(key, 0666 | IPC_CREAT);
    struct msgbuf message;

    if(fork() == 0) {  // Child sends message
        message.mtype = 1;
        strcpy(message.mtext, "Hello from child");
        msgsnd(msgid, &message, sizeof(message.mtext), 0);
        printf("Child sent message\n");
    } else {            // Parent receives message
        wait(NULL);
        msgrcv(msgid, &message, sizeof(message.mtext), 1, 0);
        printf("Parent received: %s\n", message.mtext);
        msgctl(msgid, IPC_RMID, NULL);
    }
    return 0;
}
