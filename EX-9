#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    int shmid = shmget(IPC_PRIVATE, sizeof(int), 0666|IPC_CREAT);
    int *shared = (int*) shmat(shmid, NULL, 0);
    *shared = 0;

    if(fork() == 0) {  // Child process
        *shared = 100;
        printf("Child wrote: %d\n", *shared);
    } else {            // Parent process
        wait(NULL);
        printf("Parent read: %d\n", *shared);
        shmdt(shared);
        shmctl(shmid, IPC_RMID, NULL);
    }
    return 0;
}
