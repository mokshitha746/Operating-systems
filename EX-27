#include <stdio.h>
#include <stdlib.h>
#include <dirent.h>

void listFiles(const char *path) {
    struct dirent *entry;
    DIR *dp = opendir(path);

    if (dp == NULL) {
        perror("opendir");
        return;
    }

    printf("Listing files in directory: %s\n", path);

    while ((entry = readdir(dp)) != NULL) {
        // skip "." and ".."
        if (entry->d_name[0] != '.')
            printf("%s\n", entry->d_name);
    }

    closedir(dp);
}

int main(int argc, char *argv[]) {
    if (argc == 1) {
        // No directory provided, use current directory
        listFiles(".");
    } else if (argc == 2) {
        // User provided a directory
        listFiles(argv[1]);
    } else {
        printf("Usage: %s [directory]\n", argv[0]);
        exit(1);
    }

    return 0;
}
