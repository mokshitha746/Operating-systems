#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, j, head, size, seek = 0, temp;
    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence: ");
    for (i = 0; i < n; i++) scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);
    printf("Enter disk size: ");
    scanf("%d", &size);

    req[n] = 0; req[n+1] = size - 1;
    n += 2;

    for (i = 0; i < n-1; i++)
        for (j = 0; j < n-i-1; j++)
            if (req[j] > req[j+1]) { temp=req[j]; req[j]=req[j+1]; req[j+1]=temp; }

    int pos;
    for (i = 0; i < n; i++) if (head < req[i]) { pos = i; break; }

    printf("Sequence of head movement: %d ", head);
    for (i = pos; i < n; i++) { seek += abs(req[i]-head); head = req[i]; printf("-> %d ", head); }
    for (i = 0; i < pos; i++) { seek += abs(req[i]-head); head = req[i]; printf("-> %d ", head); }

    printf("\nTotal seek time: %d\n", seek);
    return 0;
}
